{{# if products }}
    <div class="row">
        <table class="table table-condensed">
            <thead>
            <tr>
                <th>Pizza</th>
                <th>Quantity</th>
                <th>Price</th>
            </tr>
            </thead>
            <tbody>
            {{# each products }}
                <tr>
                    <td>{{this.item.name}}</td>
                    <td>{{this.qty}}</td>
                    <td>${{this.price}}</td>
                </tr>
            {{/each}}
            </tbody>
        </table>
    </div>
    <div class="row">
        <h3>Cart Total : ${{totalPrice}}</h3>
        <a href="/checkOut" role="button" class="btn btn-success">Checkout</a>
    </div>
{{/if}}