<div>
    <div class="container">
        <div class="col-sm-6 col-sm-offset-3">
            <h1><span class="fa fa-sign-in"></span>Enter a Delivery Address</h1>
            <!-- LOGIN FORM-->
            <form action="/hdCheckout" method="post">

                <h1>{{product.name}}</h1>
                <div class="form-group">
                    <label>Name</label>
                    <input type="text" name="name" value="{{user.name}}" class="form-control" disabled/>
                </div>
                <div class="form-group">
                    <label>Address</label>
                    <input type="text" name="address" value="{{user.address}}" class="form-control"/>
                </div>
                <div class="form-group">
                    <label>ZipCode</label>
                    <input type="text" name="zipCode" value="{{user.zipCode}}" class="form-control"/>
                </div>
                <div class="form-group">
                    <label>Phone Number</label>
                    <input type="text" name="phNo" value="{{user.phNo}}" class="form-control"/>
                </div>
                <button type="submit" class="btn btn-primary btn-lg">Place Order</button>
            </form>
            <hr/>
        </div>
    </div>
</div>