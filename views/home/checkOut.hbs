<h1>Your Order has been placed !!!</h1>
<div class="row" style="padding-top: 30px">
    <table class="table table-condensed">
        <thead>
        <tr>
            <th>Pizza</th>
            <th>Quantity</th>
            <th>Price</th>
        </tr>
        </thead>
        <tbody>
        {{# each order.cart.items }}
            <tr>
                <td>{{this.item.name}}</td>
                <td>{{this.qty}}</td>
                <td>${{this.price}}</td>
            </tr>
        {{/each}}
        </tbody>
    </table>
</div>
<div class="row">
    <h3>Order Total : ${{order.cart.totalPrice}}</h3>
</div>