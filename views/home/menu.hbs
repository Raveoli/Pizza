<div class="container">
    <div ng-app="menu" ng-controller="MenuCtrl as app">
        <div class="row">
            <div ng-repeat="product in app.products" class="col-sm-6 col-md-4">
                <div class="thumbnail"><img src="\{{product.image}}" alt="\{{product.name}}" class="img-responsive">
                    <div class="caption">
                        <h3>\{{product.name}}</h3>
                        <p class="description">\{{product.description}}</p>
                        <div class="clearfix"><a href="/order/\{{product._id}}" role="button"
                                                 class="btn btn-success pull-right">Order
                            Now</a></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="/javascripts/controllers/menuController.js"></script>