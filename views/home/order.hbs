<h1>Customize your order for {{product.name}}</h1>
<div class="group-left">
    <div class="row productImage">
        <img class="image-wrapper" src="{{product.image}}" alt="{{product.name}}">
    </div>
    <div class="row">
        <div class="col-sm-12 col-md-8">
            <form action="/addToCart/{{product._id}}" method="post">
                <div class="row">
                    <div class="col-xs-2" style="display: inline-block">
                        <label for="qty">Quantity</label>
                        <input class="form-control" id="qty" name="qty" type="text" value="1">
                    </div>
                    <div class="form-group col-xs-4" style="display: inline-block">
                        <label for="size">Crust Size</label>
                        <select class="form-control" id="size">
                            <option value="0" selected="selected">Small</option>
                            <option value="3">Medium</option>
                            <option value="6">Large</option>
                        </select>
                    </div>
                    <div class="col-xs-2" style="display: inline-block">
                        <label for="price">Price</label>
                        <input class="form-control" id="price" type="text" value="{{product.price}}" disabled>
                    </div>
                    <div style="padding-top: 7px">
                        <input type="submit" value="Add To Cart" class="btn btn-success btn-lg">
                    </div>
                </div>
            </form>

        </div>
    </div>
</div>
<script src="/javascripts/order.js"></script>