<div class="container">
    <h1>Search Results</h1>
    <div>
        <h3>Filter By:</h3>
        <form action="/filter/{{query}}" method="post">
            <label class="radio-inline">
                <input type="radio" name="filter" value="name">Name
            </label>
            <label class="radio-inline">
                <input type="radio" name="filter" value="desc">Ingredient
            </label>
            <button type="submit" class="btn btn-default">Submit</button>
        </form>

    </div>
    <div style="padding-top: 20px">
        <div class="row">
            {{# each products}}
                <div class="col-sm-6 col-md-4">
                    <div class="thumbnail"><img src="{{this.image}}" alt="{{this.name}}" class="img-responsive">
                        <div class="caption">
                            <h3>{{this.name}}</h3>
                            <p class="description">{{this.description}}</p>
                            <div class="clearfix"><a href="/order/{{this._id}}" role="button"
                                                     class="btn btn-success pull-right">Order
                                Now</a></div>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
</div>
<script src="/javascripts/controllers/menuController.js"></script>