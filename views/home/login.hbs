<div ng-app>
    <div class="container">
        <div class="col-sm-6 col-sm-offset-3">
            <h1><span class="fa fa-sign-in"></span> Login
            </h1>
            {{#if loginMessage}}
                <div class="alert alert-danger">{{loginMessage}}</div>
            {{/if}}
            <!-- LOGIN FORM-->
            <form name="userForm" action="/login" method="post" novalidate>
                <div class="form-group">
                    <label>Username</label>
                    <input type="text" name="userName" ng-model="user.userName" ng-minlength="3" ng-maxlength="8"
                           class="form-control" required>
                    <p ng-show="userForm.userName.$invalid &amp;&amp; !userForm.userName.$pristine &amp;&amp; userForm.userName.$error.minlength"
                       class="help-block">Username is too short.</p>
                    <p ng-show="userForm.userName.$invalid &amp;&amp; !userForm.userName.$pristine &amp;&amp; userForm.userName.$error.maxlength"
                       class="help-block">Username is too long.</p>
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input type="password" name="password" ng-model="password" ng-minlength="5" class="form-control"
                           required>
                    <p ng-show="userForm.password.$invalid &amp;&amp; !userForm.password.$pristine &amp;&amp; userForm.password.$error.minlength"
                       class="help-block">Password is too short.</p>
                </div>
                <button type="submit" ng-disabled="userForm.$invalid" class="btn btn-primary btn-lg">Login</button>
            </form>
            <hr>
            <p>Need an account?<a href="/signup">Signup</a></p>
            <p>Or go<a href="/">home</a>.</p>
        </div>
    </div>
</div>